{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ES2020",
        "outDir": "out",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "src",
        "strict": true,
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test",
        "out"
    ]
}