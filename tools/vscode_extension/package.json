{
  "name": "objwatch-visualizer",
  "displayName": "ObjWatch Visualizer",
  "description": "A VSCode extension for visualizing ObjWatch JSON output with interactive folding and real-time updates",
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Visualization",
    "Debugging",
    "Other"
  ],
  "activationEvents": [
    "onCommand:objwatch.openVisualizer",
    "onCustomEditor:objwatch.visualizer"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "objwatch.openVisualizer",
        "title": "Open ObjWatch Visualizer",
        "category": "ObjWatch"
      },
      {
        "command": "objwatch.showDebugOutput",
        "title": "Show Debug Output",
        "category": "ObjWatch"
      },
      {
        "command": "objwatch.showMetrics",
        "title": "Show Performance Metrics",
        "category": "ObjWatch"
      }
    ],
    "customEditors": [
      {
        "viewType": "objwatch.visualizer",
        "displayName": "ObjWatch Visualizer",
        "selector": [
          {
            "filenamePattern": "objwatch.json"
          }
        ],
        "priority": "default"
      }
    ],
    "configuration": {
      "title": "ObjWatch Visualizer",
      "properties": {
        "objwatch.debug": {
          "type": "boolean",
          "default": false,
          "description": "Enable debug mode for detailed logging"
        },
        "objwatch.autoRefresh": {
          "type": "boolean",
          "default": true,
          "description": "Automatically refresh the visualizer when the file changes"
        },
        "objwatch.maxEvents": {
          "type": "number",
          "default": 1000,
          "description": "Maximum number of events to display (0 for unlimited)"
        },
        "objwatch.refreshInterval": {
          "type": "number",
          "default": 500,
          "description": "File watch interval in milliseconds"
        }
      }
    },
    "menus": {
      "commandPalette": [
        {
          "command": "objwatch.openVisualizer",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "command": "objwatch.openVisualizer",
          "when": "resourceFilename == 'objwatch.json'",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "node scripts/package.js",
    "build": "npm run compile && npm run package"
  },
  "devDependencies": {
    "@types/node": "^16.11.7",
    "@types/vscode": "^1.60.0",
    "archiver": "^7.0.1",
    "typescript": "^4.4.4",
    "vsce": "^1.95.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/objwatch/objwatch-vscode-extension"
  },
  "publisher": "objwatch",
  "icon": "media/icon.png"
}
